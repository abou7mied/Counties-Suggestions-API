{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/?(*.)+(spec|test).+(ts|tsx|js)",
    "node_modules",
    "build"
  ]
}
